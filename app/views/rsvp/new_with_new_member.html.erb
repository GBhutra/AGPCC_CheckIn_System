<h1>This is the R.S.V.P. page with a new member for <%= @event.title %></h1>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<%= form_for(:member, :url => {:action => 'create_with_new_member' ,:controller => 'rsvp' ,:id => @event.id}) do |f| %>  
<table>
  <tr><th><%= f.label :first_name %><%= f.text_field(:first_name) %></th></tr>
  <tr><th><%= f.label :last_name %><%= f.text_field(:last_name) %></th></tr>
  <tr><th><%= f.label :Email %><%= f.email_field(:email) %></th></tr>
  <tr><th><%= f.label :Gender %><%= f.text_field(:gender) %></th></tr>
  <tr><th><%= f.label :classification %><%= f.text_field(:classification) %></th></tr>
  <tr><th><%= submit_tag ("R.S.V.P.") %></th></tr>
</table>
<% end %>
