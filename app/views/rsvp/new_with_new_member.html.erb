<div class="container">
  <h2 class="section-subheading">R.S.V.P to <%= @event.title %></h2>
  <h1> Welcome to Aggie Graduate &amp; Professional Community Club! </h1>
  <h3>Hmm.. Looks like you are signing in for the first time. We need some more information!</h3>
  <% if flash[:notice] %>
  <div class="alert alert-danger fade in"><%= flash[:notice] %></div>
  <% end %>
  <div class="form-box">
  <%= form_for(:member, :url => {:action => 'create_with_new_member' ,:method => 'POST', :controller => 'rsvp' ,:id => @event.id, :class => 'form-group'}) do |f| %>  
    <h4> First Name :</h4>
    <%= f.text_field(:first_name, :class=> 'form-control') %>
    <h4> Last Name :</h4>
    <%= f.text_field(:last_name, :class=> 'form-control') %>
    <h4> Email :</h4>
    <%= f.email_field(:email, :class=> 'form-control') %>
    <h4> Gender :</h4>
    <%= f.select :gender, ['male', 'female'], :class => 'dropdown-menu'  %>
    <h4> Classification :</h4>
    <%= f.select :classification, ['Master', 'PhD', 'Undergrad'], :class => 'form-control' %>
    <br>
    <%= submit_tag "RSVP", :class => "btn btn-warning"  %>
  <% end %>
  </div>
</div>
