<div class="container">
  <h1>New Event</h1>
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <div class="form-box">
  <%= form_for(:event, :url => {:action => 'create' ,:method => 'POST', :controller => 'events', :class => 'form-group'}) do |f| %>  
    <h4> Event Title :</h4>
    <%= f.text_field :title, :class=> 'form-control' %>
    <h4> Event Description :</h4>
    <%= f.text_area :description, :class=> 'form-control' %>
    <h4> Venue :</h4>
    <%= f.text_field :venue, :class=> 'form-control' %>
    <h4> Start Time :</h4>
    <%= f.datetime_field :start_time, :class=> 'form-control' %>
    <h4> End Time :</h4>
    <%= f.datetime_field :end_time, :class=> 'form-control' %>
    <br><br>
    <%= submit_tag "Create", :class => "btn btn-lg btn-warning"  %>
  <% end %>
  </div>
</div>
